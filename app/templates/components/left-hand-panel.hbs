<ul class="tabs">
  <li class="tab tab-duverger">
    <input type="radio" name="tabs" id="tab1" checked />
    <label for="tab1">
      <svg role="img" title="Duverger" class="icon sprite-duverger-outline" viewBox="0 0 41.8 57.2">
        <use xlink:href="svg/spritemap.svg#duverger-outline"></use>
