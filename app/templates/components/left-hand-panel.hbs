        <use xlink:href="svg/spritemap.svg#icon-parameters"></use>
      </svg>
      Parameters
    </label>
    <div id="tab-content2" class="tab-content">
      <header>Global Parameters</header>

      <table>
        <thead>
          <tr>
            <th>Parameter</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <span class="parameter">Default formula</span>
              system of voting
            </td>
            <td>Majority with run-off</td>
          </tr>
          <tr>
            <td>
              <span class="parameter">District magnitude (DM)</span>
              Number of seats elected per district
            </td>
            <td>1</td>
          </tr>

          <tr>
            <td>
              <span class="parameter">Legislative size</span>
              Number of seats in the legislature
            </td>
            <td>10</td>
          </tr>

          <tr>
            <td>
              <span class="parameter">Number of voters</span>
              Voters per district
            </td>
            <td>Unlimited</td>
          </tr>

          <tr>
            <td>
              <span class="parameter">Preference Groups</span>
              Groups of voters with the same party preferences
            </td>
            <td>5</td>
          </tr>
        </tbody>
      </table>

      <table>
        <thead>
          <tr>
            <th>Party Name</th>
            <th>Party color</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Conservative (C)</td>
            <td><span class="conservative">Charcoal</span></td>
          </tr>
          <tr>
            <td>Green (G)</td>
            <td><span class="green">Green</span></td>
          </tr>
          <tr>
            <td>Liberal (L)</td>
            <td><span class="liberal">Yellow</span></td>
          </tr>
          <tr>
            <td>Nationalist (N)</td>
            <td><span class="nationalist">Teal</span></td>
          </tr>
          <tr>
            <td>Social Democrat (SD)</td>
            <td><span class="social-democrat">Red</span></td>
          </tr>
        </tbody>
      </table>
    </div>
