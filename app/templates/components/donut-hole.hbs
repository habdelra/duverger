<div {{bind-attr class=":election-outcome__results" }}>
   {{#each party in displayParties}}
     <div {{bind-attr class="hasWinner::runoff party.name :party-winner"}}> {{party.abbreviation}}</div>
   {{/each}}
   <div class="final-seats">Final Seats</div>

   {{#if hasTie}}
     Unresolveable Tie
   {{/if}}

   {{#if requiresRunoff}}
     {{#each party in displayParties}}
       <div class="party-winner runoff">{{party.name}} ({{party.abbreviation}})</div>
     {{/each}}
   {{/if}}

   {{#if hasWinner}}
     <div class="party-winner">{{winnerName}} ({{winnerAbbreviation}})</div>
   {{/if}}
 </div>
