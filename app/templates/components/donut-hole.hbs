 <div {{bind-attr class=":election-outcome winningParty" }}>

   {{#if hasTie}}
     Unresolveable Tie
   {{/if}}

   {{#if requiresRunoff}}
     {{#each party in displayParties}}
       <div class="party-winner runoff">{{party.name}} ({{party.abbreviation}})</div>
     {{/each}}
     <button {{action 'viewRunoffElection'}}>View Runoff Results</button>
   {{/if}}

   {{#if hasWinner}}
     <div class="party-winner">{{winnerName}} ({{winnerAbbreviation}})</div>
   {{/if}}
   {{#if currentRunoff}}
     <button {{action 'viewOriginalElection'}}>View Original Election Results</button>
   {{/if}}
 </div>
